#!/bin/sh
# needs sudo rights

# Pre-install
apt-get update

# Install vim
echo 'installing vim...'
apt-get install vim

# Install zsh
echo 'installing zsh...'
apt-get install zsh

# Install oh-my-zsh
echo 'installing oh-my-zsh...'
sh -c "$(wget https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh -O -)"
